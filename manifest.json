    {
    "name": "Website Cooldown",
    "version": "1.0",
    "description": "Productivity extension that limits your access to chosen URLs for a given period of time.",
    "manifest_version": 2,

    "permissions": [
        "storage",
        "webRequest", 
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Cooldown"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}